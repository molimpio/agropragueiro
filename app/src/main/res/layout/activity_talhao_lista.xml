<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.Lista.TalhaoListaActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_talhoes"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/tv_lista_vazia_talhao"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/n_o_existem_dados_cadastrados"
        android:textSize="30sp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_cadastro_talhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginEnd="15dp"
        app:srcCompat="@mipmap/baseline_add_white_24"/>

</LinearLayout>